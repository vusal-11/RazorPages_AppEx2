@page "/Products"
@model RazorPages_AppEx2.Pages.ProductsModel



@if(!Model.Products.Any()){
    <h3>No Data</h3>
}
else{
    <h3>Products</h3>
    @foreach(var product in Model.Products.ToList())
    {
        <p>
            <a href="products/@product.Id">
                @product.Name
            </a>
           
         </p>
    }
}